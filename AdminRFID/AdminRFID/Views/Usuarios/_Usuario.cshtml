@using AdminRFID.Models;

@{ Layout = null;}

@model Usuario


@{
    Usuario usuario = new Usuario();
    usuario = Model;
}

@using (Ajax.BeginForm("GuardarUsuario", "Usuarios",

new AjaxOptions
{
    HttpMethod = "Post",
    OnBegin = "onBeginSubmitGuardarUsuario",
    OnFailure = "onFailureResultGuardarUsuario",
    OnSuccess = "onSuccessResultGuardarUsuario",
},
new { id = "frmUsuario" }))
{



    @Html.HiddenFor(x => usuario.idUsuario, new { @id = "idUsuario" })

    <div class="row">

        <div class="form-group col-lg-6">
            <label>Usuario</label>
            @Html.TextBoxFor(x => usuario.usuario, new { @class = "form-control", data_val_required = "El usuario no puede ir vacio", data_val = "true" })
            @Html.ValidationMessageFor(x => usuario.usuario, null, new { @class = "text-danger was" })
        </div>


        <div class="form-group col-lg-6">
            <label>Contraseña</label>
            <div class="input-group">
                @Html.TextBoxFor(x => usuario.contrasena, new { @class = "form-control", @id = "contrasena", type = "password", data_val_required = "La contraseña no puede ir vacia", data_val = "true" })
                @Html.ValidationMessageFor(x => usuario.contrasena, null, new { @class = "text-danger was" })
                <div class="input-group-append">
                    <div class="input-group-text" id="MostrarPassword">
                        <i class="fas fa-eye"></i>
                    </div>
                </div>
            </div>
        </div>


        <div class="form-group col-lg-6">
            <label>Nombre</label>
            @Html.TextBoxFor(x => usuario.nombreCompleto, new { @class = "form-control", data_val_required = "El nombre no puede ir vacio", data_val = "true" })
            @Html.ValidationMessageFor(x => usuario.nombreCompleto, null, new { @class = "text-danger was" })
        </div>

        <div class="form-group col-lg-6">
            <label>Telefono</label>
            @Html.TextBoxFor(x => usuario.telefono, new { @class = "form-control", onkeypress = "return esNumero(event)" })
            @Html.ValidationMessageFor(x => usuario.telefono, null, new { @class = "text-danger was" })
        </div>

        <div class="form-group col-lg-6">
            <label>Correo</label>
            @Html.TextBoxFor(x => usuario.correo, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => usuario.correo, null, new { @class = "text-danger was" })
        </div>

    </div>

    <div class="row">
        <div class="col-12 col-sm-12 col-lg-12">
            <div class="text-right" style="margin-top:15px;">
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancelar</button>
                <button type="submit" id="btnGuardarUsuario" class="btn btn-success">Guardar</button>
            </div>
        </div>
    </div>
}






@using AdminRFID.Models;
@model Notificacion<List<Producto>>

@{
    Layout = null;
    List<Producto> inventario = Model.Modelo != null ? (List<Producto>)Model.Modelo : new List<Producto>();
    int cont = 1;
}

@if (Model.Estatus != 200)
{

    <div class="empty-state">
        <div class="empty-state-icon">
            <i class="fas fa-info"></i>
        </div>
        <h2>@Model.Mensaje</h2>
    </div>

}
else
{
    <div class="section-body">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-striped" id="tblInventario">
                                <thead>
                                    <tr>                                       
                                        <th>Tag</th>
                                        <th>Descripciòn</th>
                                        <th>Total de productos entrantes</th>
                                        <th>Total de productos salientes</th>
                                        <th>Cantidad a la Fecha</th>                                        
                                        <th>Fecha Actualización</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Producto item in inventario)
                                    {
                                        <tr>                         
                                          
                                            <td>@item.tag</td>
                                            <td>@item.descripcion</td>
                                            <td>@item.cantidadTotalEntradas</td>
                                            <td>@item.cantidadTotalSalidas</td>
                                            <td>@item.cantidad</td>
                                            <td>@item.fechaAlta.ToShortDateString()</td>
                                        </tr>
                               
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


}


